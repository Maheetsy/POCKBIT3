\<?xml version="1.0" encoding="utf-8"?>
<!-- Para obtener más información sobre cómo usar la transformación de web.config, visite https://go.microsoft.com/fwlink/?LinkId=125889 -->
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
	<!-- Transformación de la cadena de conexión -->
	<connectionStrings>
		<add name="MyDB"
			 connectionString="Server=tcp:pockbit-sql-upp.database.windows.net,1433;Initial Catalog=POKBITV3;Persist Security Info=False;User ID=pockbit_admin;Password=Secret1601;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
			 xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
	</connectionStrings>

	<!-- Transformación de la sección customErrors (ejemplo opcional) -->
	<system.web>
		<customErrors defaultRedirect="GenericError.htm"
					  mode="RemoteOnly"
					  xdt:Transform="Replace">
			<error statusCode="500" redirect="InternalError.htm"/>
		</customErrors>
	</system.web>
</configuration>